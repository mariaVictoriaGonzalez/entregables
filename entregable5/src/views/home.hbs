<div>
    <h1>Lista de productos:</h1>

    <form action="/products/addToCart/:productId" method="post" id="addProducts" enctype="application/x-www-form-urlencoded">
        {{#each productsToRender}}
        <li>
            <h2>Producto: {{this.title}}</h2>
            <p>Descripci√≥n: {{this.description}}</p>
            <p>Precio: $ {{this.price}}</p>
            <button class="addProductToCart" data-id="{{this._id}}" onclick="addToCart('{{this._id}}')" type="button">Agregar al Carrito</button>
        </li>
        {{/each}}
    </form>
</div>

<script src="/js/add.products.js"></script>
